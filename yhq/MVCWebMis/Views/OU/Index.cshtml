            //通用保存操作
            function saveAction(url, id, addList, removeList) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    async: false,
                    data: { ouid: id, addList: addList.join(','), removeList: removeList.join(',') },
                    success: function (id) {
