                    </td>
                    <th>
                        <label for="XueSheng_Id">学生编号：</label>
                    </th>
                    <td>
                        <input class="easyui-numberbox" type="text" id="XueSheng_Id" name="XueSheng_Id" /> <!-- data-options="required:true,validType:'length[1,5]'" -->
                    </td>
                </tr>
