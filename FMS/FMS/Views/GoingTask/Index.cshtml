        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.CloseTime)
        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.UnReaded)
        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.UnFinished)
        </td>
    </tr>
}
        </tbody>
    </table>
</div>

