        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td style="text-align: center;" id="td">
            @Html.DisplayFor(modelItem => item.TaskName)
        </td>
        <td style="text-align: center;" id="td">
