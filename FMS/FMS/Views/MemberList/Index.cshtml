@using Webdiyer.WebControls.Mvc

@model PagedList<FMS.YongHu>

@{
    ViewBag.Title = "通讯录";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script type="text/javascript">

    $(function () {
        CheckAll(); //数据表格的全选函数
        CheckedTr();  //数据表格实现点击table里的某一个tr 选中此行

    });

</script>



<div id="DataGrid" style="width: 100%; height: 450px; background-color: #ffffff;">
    <style type="text/css">
        .mvcPager a {
            text-decoration: none;
        }

        .mvcPager {
            background-color: #696969;
            border-bottom: 1px #000000 solid;
            font-size: 12px;
            color: #ffffff;
            padding-left: 10px;
            font-weight: bolder;
        }

            .mvcPager input[type=text] {
                width: 24px;
                border: #ffffff 1px solid;
            }

            .mvcPager .gotoPage {
                float: right;
            }
    </style>


    <table id="mytable" cellspacing="0" style="width: 100%">
        <tr style="height: 25px;">
            @*<th width="30px">
                <input name="chkAll" type="checkbox" value="checkbox" id="CheckAll" />
            </th>*@
            <th style="width: 30px;">
                序号
            </th>
            <th style="width: 30px;">
                姓名
            </th>
            <th style="width: 200px;">
                手机号
            </th>
            <th style="width: 200px;">
                邮箱地址
            </th>
            <th style="width: 200px;">
                部门
            </th>
            @*<th style="width: 200px;">
                发布者
            </th>*@
        </tr>
        <tbody id="TableData">
            @foreach (var item in Model)
            {
                <tr>
                    @*<td width="30px" style="text-align: center;" id="SingleCheck">
                        <input id="@Html.DisplayFor(modelItem => item.ID)" type="checkbox" value="checkbox" />
                    </td>*@
                    <td style="text-align: center;" id="td">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td style="text-align: center;" id="td">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="text-align: center;" id="td">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td style="text-align: center;" id="td">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="text-align: center;" id="td">
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    @Html.AjaxPager(Model, new PagerOptions
    {
        AutoHide = false,
        CssClass = "mvcPager",
        PageIndexParameterName = "id",
        FirstPageText = "首页",
        LastPageText = "末页",
        PrevPageText = "上一页",
        NextPageText = "下一页",
        GoButtonText = "跳转",
        HorizontalAlign = "left",
        SeparatorHtml = "&nbsp; &nbsp;",
        ShowMorePagerItems = true,
        AlwaysShowFirstLastPageNumber = true,
        ShowPageIndexBox = true,
        PageIndexBoxWrapperFormatString = "{0}页"
    }, new AjaxOptions() { UpdateTargetId = "DataGrid" })
</div>
