            if ($("#edit_search").val() != "") {  //去除 backspace的重复
                    $("#AllMemery option").each(function () {
                        var option = $(this);
                        var value = ConvertPinyin(option.text());
                        var lowerCaseChar = value.toLocaleLowerCase();//转换为小写
                        //  var upperCaseChar = value.toLocaleUpperCase();//转换为大写
